
<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
      <div class="col-lg-8">
        <h3>伝票一覧</h3>
       <table class='table table-hover table-inverse'>
         <thead>
           <tr>
             <th>申請者</th>
             <th>日付</th>
             <th>経費</th>
             <th>金額</th>
           </tr>
         </thead>
         <tbody>
         <% @pettys.each do |petty|%>
            <tr>
               <td><%= petty.user.name %></td>
               <td><%= petty.day %></td>
               <td><%= petty.category %></td>
               <td><%= petty.total_money %></td>
           </tr>
         <% end %>
         </tbody>
       </table>
     </div>  
     <div class="col-lg-1"></div>
   </div>
</div>
